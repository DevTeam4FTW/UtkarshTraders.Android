<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_weight="1"
    android:background="#ececec"
    tools:context=".PlaceOrderActivity">

    <ScrollView
        android:id="@+id/scrollbaba"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="#fff">


            <TextView
                android:id="@+id/customer_total"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/bill_spinner"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="65dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-49dp"
                android:backgroundTintMode="src_in"
                android:fontFamily="@font/montserrat"
                android:maxLines="1" />

            <TextView
                android:id="@+id/customer_total2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignBottom="@id/bill_spinner"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="65dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-49dp"
                android:background="@drawable/spinnerborder"
                android:backgroundTintMode="src_in"
                android:fontFamily="@font/montserrat"
                android:maxLines="1" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:maxLines="1" />

            <TextView
                android:id="@+id/item_name2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="56dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinnerborder"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:maxLines="1" />

            <EditText
                android:id="@+id/item_qty"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="62dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:maxLines="1" />

            <EditText
                android:id="@+id/item_price"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="87dp"
                android:layout_marginTop="112dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:maxLines="1" />

            <ToggleButton
                android:id="@+id/togglespecial"
                android:layout_width="51dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="300dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:fontFamily="@font/montserrat" />

            <TextView
                android:id="@+id/taxrate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/item_price"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="87dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-51dp"
                android:editable="false"
                android:fontFamily="@font/montserrat"
                android:maxLines="1" />

            <TextView
                android:id="@+id/taxrate2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignBottom="@id/item_price"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="87dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-51dp"
                android:background="@drawable/spinnerborder"
                android:editable="false"
                android:fontFamily="@font/montserrat"
                android:maxLines="1" />

            <Spinner
                android:id="@+id/area_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="212dp"
                android:layout_marginRight="10dp"
                android:backgroundTintMode="src_in"
                />

            <Spinner
                android:id="@+id/area_spinner2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="251dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinnerborder"
                android:backgroundTintMode="src_in"
                tools:ignore="DuplicateIds" />

            <Spinner
                android:id="@+id/bill_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="313dp"
                android:layout_marginRight="10dp"
                android:backgroundTintMode="src_in" />

            <Spinner
                android:id="@+id/bill_spinner2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="351dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinnerborder"
                android:backgroundTintMode="src_in" />

            <Spinner
                android:id="@+id/unit_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="262dp"
                android:layout_marginRight="10dp"
                android:backgroundTintMode="src_in" />

            <Spinner
                android:id="@+id/unit_spinner2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="262dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinnerborder"
                android:backgroundTintMode="src_in" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="19dp"
                app:srcCompat="@drawable/item_namelogo" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="127dp"
                app:srcCompat="@drawable/item_pricelogo" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="178dp"
                app:srcCompat="@drawable/taxratelogo" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="329dp"
                app:srcCompat="@drawable/billlogo" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="69dp"
                app:srcCompat="@drawable/item_qtylogo" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="227dp"
                android:layout_marginBottom="284dp"
                app:srcCompat="@drawable/addressicon" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="276dp"
                app:srcCompat="@drawable/item_qtylogo" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="22dp"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="183dp"
                app:srcCompat="@drawable/rupee" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="22dp"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="382dp"
                app:srcCompat="@drawable/rupee" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="22dp"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="132dp"
                app:srcCompat="@drawable/rupee" />

            <Button
                android:id="@+id/placeorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="465dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/black"
                android:fontFamily="@font/montserrat"
                android:text="Add"
                android:textColor="@android:color/background_light" />

        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollbaba"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/nav_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >


        <Button
            android:id="@+id/home"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:text="Home" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent" />


        <Button
            android:id="@+id/add_customer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Customer"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Settings"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>